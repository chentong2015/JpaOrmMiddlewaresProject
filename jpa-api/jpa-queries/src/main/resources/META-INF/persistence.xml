<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">

    <!-- Hibernate JPA持久层配置文件 -->
    <persistence-unit name="jpa.queries" transaction-type="RESOURCE_LOCAL">
        <description>JPA Query Demo</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>entity.BaseEntity</class>
        <class>entity.Person</class>
        <class>entity.join.KzRecord</class>
        <class>entity.join.KzAddress</class>

        <class>query_native.Book</class>
        <class>query_criteria.Sample</class>
        <class>query_named.NamedQueryEntity</class>
        <class>query_pageable.Product</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"/>
            <property name="hibernate.connection.url" value="jdbc:sqlserver://localhost:1433;Database=sample;Trusted_Connection=true;"/>
            <property name="hibernate.connection.username" value="sa"/>
            <property name="hibernate.connection.password" value="Hello00123"/> -->

            <property name="hibernate.dialect" value="org.hibernate.dialect.OracleDialect"/>
            <property name="hibernate.connection.url" value="jdbc:oracle:thin:@//localhost:1531/orclcdb"/>
            <property name="hibernate.connection.username" value="fum"/>
            <property name="hibernate.connection.password" value="test1"/>
        </properties>
    </persistence-unit>
</persistence>


